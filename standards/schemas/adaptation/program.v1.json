{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socios.dev/schemas/adaptation/program.v1.json",
  "title": "Adaptation Program (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "project_id",
    "baseline",
    "treatment",
    "metrics",
    "decision_rule"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^prog:[a-z0-9._:-]+$"
    },
    "project_id": {
      "type": "string",
      "pattern": "^proj:[a-z0-9._:-]+$"
    },
    "baseline": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pipeline_ref"
      ],
      "properties": {
        "pipeline_ref": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "treatment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "activation_plan_id"
      ],
      "properties": {
        "activation_plan_id": {
          "type": "string",
          "pattern": "^plan:"
        },
        "overrides": {
          "type": "object"
        }
      }
    },
    "datasets": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "train": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dev": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "metrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "aggregate"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "aggregate": {
            "type": "string",
            "enum": [
              "macro",
              "micro",
              "weighted",
              "per_class",
              "per_topic"
            ]
          },
          "constraints": {
            "type": "object"
          }
        }
      }
    },
    "decision_rule": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "promote_if"
      ],
      "properties": {
        "promote_if": {
          "type": "object"
        },
        "rollback_if": {
          "type": "object"
        }
      }
    },
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "started_at",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^run:[a-z0-9._:-]+$"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "ended_at": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "enum": [
              "running",
              "completed",
              "failed"
            ]
          },
          "results": {
            "type": "object"
          },
          "decision": {
            "type": "string",
            "enum": [
              "promote",
              "hold",
              "rollback",
              "none"
            ]
          }
        }
      }
    }
  }
}
