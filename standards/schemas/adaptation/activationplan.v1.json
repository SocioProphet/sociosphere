{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socios.dev/schemas/adaptation/activationplan.v1.json",
  "title": "ActivationPlan (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "applies_to",
    "objective",
    "composition",
    "conflicts",
    "entitlements"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^plan:[a-z0-9._:-]+$"
    },
    "applies_to": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "project_id"
      ],
      "properties": {
        "project_id": {
          "type": "string",
          "pattern": "^proj:[a-z0-9._:-]+$"
        },
        "dataset_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "objective": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "primary_metric",
        "target_gain"
      ],
      "properties": {
        "primary_metric": {
          "type": "string"
        },
        "target_gain": {
          "type": "number"
        },
        "guardrails": {
          "type": "object"
        }
      }
    },
    "composition": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "include_space"
        ],
        "properties": {
          "include_space": {
            "type": "string",
            "pattern": "^space:[a-z0-9._:-]+$"
          },
          "mode": {
            "type": "string",
            "enum": [
              "merge",
              "overrides_only",
              "append_only"
            ],
            "default": "merge"
          },
          "when": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "topic_space": {
                "type": "string",
                "pattern": "^space:topic:(lda|lsi|lsa):"
              },
              "topic_membership_gte": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "topic_top_k": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "conflicts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "strategy"
      ],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": [
            "ranked_layers",
            "pinned_overrides",
            "vote",
            "deny_on_conflict"
          ]
        },
        "pinned_artifacts": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^art:"
          }
        }
      }
    },
    "entitlements": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "required_actions"
      ],
      "properties": {
        "required_actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "min_plan": {
          "type": "string",
          "enum": [
            "free",
            "premium",
            "enterprise"
          ],
          "default": "free"
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
