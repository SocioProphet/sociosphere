{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.sociosphere.local/delex/gtm-intelligence/v0/common.v0.json",
  "title": "Common definitions for GTM Intelligence v0",
  "type": "object",
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "known_id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200,
      "pattern": "^[a-zA-Z0-9._:@/-]+$"
    },
    "iso_datetime": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{1,6})?Z$"
    },
    "person_hash": {
      "type": "string",
      "minLength": 16,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9+/=_-]+$"
    },
    "money_usd": {
      "type": "number",
      "minimum": 0
    },
    "pod_id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 120
    },
    "segment_family": {
      "type": "string",
      "enum": ["growth", "relationship", "risk"]
    },
    "motion": {
      "type": "string",
      "enum": ["new_logo", "expansion", "renewal", "partner_cosell"]
    },
    "artifact_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifact_id", "artifact_type", "uri"],
      "properties": {
        "artifact_id": { "$ref": "#/$defs/known_id" },
        "artifact_type": { "$ref": "#/$defs/known_id" },
        "uri": { "type": "string", "minLength": 1 }
      }
    }
  },
  "additionalProperties": false
}
