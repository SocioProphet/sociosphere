{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ops-metrics-registry.v1.schema.json",
  "type": "object",
  "required": ["version", "privacy", "metrics"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "privacy": {
      "type": "object",
      "required": ["default_view", "audit_log", "restricted_domains"],
      "properties": {
        "default_view": { "type": "string", "enum": ["aggregate"] },
        "audit_log": { "type": "boolean" },
        "restricted_domains": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "metric_id","name","cadence","owner","privacy_domain","classification",
          "definition_markdown","formula_ref","effective_from"
        ],
        "properties": {
          "metric_id": { "type": "string" },
          "name": { "type": "string", "minLength": 2 },
          "cadence": { "type": "string", "enum": ["weekly","monthly","quarterly"] },
          "owner": { "type": "string", "minLength": 2 },
          "privacy_domain": { "type": "string", "enum": ["aggregate","hr"] },
          "classification": {
            "type": "string",
            "enum": ["operating","quality","enablement","control","customer","strategy","people"]
          },
          "definition_markdown": { "type": "string", "minLength": 10 },
          "formula_ref": { "type": "string", "pattern": "^pipelines/ops/sql/metrics/.+\\.sql$" },
          "effective_from": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
