{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ops-metrics-linkage.v1.schema.json",
  "type": "object",
  "required": ["version", "linkages"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "linkages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "metric_id","drivers","statement_lines","mechanism",
          "expected_direction","typical_lag_days","control_dependencies","notes"
        ],
        "properties": {
          "metric_id": { "type": "string" },
          "drivers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "revenue_growth","revenue_timing","cash_timing","cash_quality","forecast_accuracy",
                "pipeline_efficiency","cogs_leakage","opex_drag","delivery_margin","capacity",
                "quality","churn_risk","retention","expansion","pricing_power",
                "audit_readiness","dispute_reduction","execution_risk","investment_efficiency",
                "sales_cycle_reduction","conversion_uplift","concentration_risk"
              ]
            }
          },
          "statement_lines": {
            "type": "object",
            "properties": {
              "income_statement": { "type": "array", "items": { "type": "string" } },
              "balance_sheet": { "type": "array", "items": { "type": "string" } },
              "cash_flow": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          },
          "mechanism": { "type": "string", "minLength": 10 },
          "expected_direction": { "type": "string", "minLength": 10 },
          "typical_lag_days": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "integer", "minimum": 0 }
          },
          "control_dependencies": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
