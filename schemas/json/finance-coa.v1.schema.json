{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "finance-coa.v1.schema.json",
  "type": "object",
  "required": ["version","accounts"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "accounts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id","name","type","statement_line"],
        "properties": {
          "id": { "type": "string", "pattern": "^[0-9]{4}$" },
          "name": { "type": "string", "minLength": 2 },
          "type": { "type": "string", "enum": ["asset","liability","equity","revenue","expense"] },
          "statement_line": { "type": ["string","null"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
